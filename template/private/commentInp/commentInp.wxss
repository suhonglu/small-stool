.post-form {
    width: 100%;
    height: 100%;
    background: rgba(0,0,0,.4);
    position: fixed;
    top: 0;
    z-index: 10000;
}

.protectErrorTouchArea {
    position: fixed;
    bottom: 50px;
    height: 20px;
    width: 100%;
}

.post-box {
    position: fixed;
    bottom: 0;
    height: 50px;
    display: flex;
    width: 100%;
    background: white;
    padding: 0 20px;
    z-index: 2000;
    box-sizing: border-box;
}

.post-input-box {
    flex: 1;
    display: flex;
    margin: auto;
}

.post-btn-box {
    font-family: 'PingFangSC-Semibold';
    font-weight: bolder;
    font-size: 15px;
    color: #333333;
    padding: 0 15px;
    background: #ffe700;
    border-radius: 50px;
    height: 34px;
    line-height: 34px;
    margin: auto;
}

.input-box {
    flex: 1;
    margin-right: 20px;
    height: 50px;
    border-radius: 4px;
    line-height: 50px;
}