@-webkit-keyframes fade-in {
    0% {
        opacity: 0;
    }

    100% {
        opacity: 1;
    }
}

@keyframes fade-in {
    0% {
        opacity: 0;
    }

    100% {
        opacity: 1;
    }
}

page {
    background-color: #ebebeb;
}

.postBigBtn {
    bottom: 50px;
}

.tutorial-wrapper {
    position: fixed;
    top: 0;
    bottom: 46px;
    width: 100%;
}

.tutorial-list {
    padding: 10px 0 20px;
}

.tutorial-list__item {
    padding: 10px 10px 0;
    overflow: hidden;
    margin-bottom: 4px;
}

.item__avatar {
    width: 40px;
    height: 40px;
    float: left;
    margin-right: 10px;
    border-radius: 4px;
    overflow: hidden;
}

.item__avatar image {
    width: 100%;
    height: 100%;
    float: left;
}

.item__main {
}

.item__teacher {
    color: #737373;
    font-size: 12px;
    line-height: 12px;
    margin-bottom: 4px;
}

image.item__content {
    height: 300px;
}

.item__content {
    font-size: 17px;
    line-height: 20px;
    color: #000;
    background: white;
    position: relative;
    padding: 8px;
    border-radius: 4px;
    max-width: 70%;
    display: inline-block;
}

.item__content::before {
    content: '';
    display: inline-block;
    position: absolute;
    left: -4px;
    top: 18px;
    width: 8px;
    height: 8px;
    background: white;
    transform: translateY(-50%) rotateZ(45deg);
}

.bottom-bar {
    font-size: 16px;
    line-height: 46px;
    text-align: center;
    background-color: rgba(245,245,245,1);
    text-align: center;
    position: fixed;
    bottom: 0;
    width: 100%;
    box-shadow: 0 1px 20px 2px lightgray;
    display: flex;
}

.bottom-bar__item {
    flex: 1;
}

.bottom-bar__divider {
    width: 1px;
    text-align: center;
    background: rgba(0,0,0,.1);
}

.newUnread-tag {
    animation: fade-in;
    animation-duration: .2s;
    position: fixed;
    left: 50%;
    bottom: 50px;
    transform: translateX(-50%);
    background: rgba(0,0,0,.5);
    border-radius: 30px;
    width: 10em;
    color: #eee;
    font-size: 12px;
    font-weight: bold;
    line-height: 24px;
    text-align: center;
}