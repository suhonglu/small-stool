page {
    overflow: hidden;
}

.content {
    text-align: center;
    margin-bottom: 10px;
}

.content__tip {
    font-size: 14px;
    color: #666666;
    letter-spacing: 0;
    text-align: center;
}

.content__btn {
    margin: 20px auto;
    line-height: 45px;
    width: 250px;
    font-weight: bold;
    font-size: 18px;
    color: #333333;
    letter-spacing: 0;
    text-align: center;
    background: #ffee3b;
    box-shadow: 0 6px 13px 0 rgba(243,209,72,0.60);
    border-radius: 50px;
    padding: 0;
}

.content__btn .fa-weixin {
    background-color: #ffe700;
    color: #000;
    padding: 14px 30px;
    border-radius: 30px;
    font-size: 16px;
}

.content__btn button {
    background: transparent;
}

.content__tutorial {
    font-size: 14px;
}

.content__tutorial span {
    text-decoration-line: underline;
    color: #000;
}

.avatarShowContainer {
    display: block;
    width: 150px;
    height: 150px;
    margin: 20px auto 10px;
    background: transparent;
}

.recommendTipLine {
    background: #eee;
    font-size: 10px;
    color: gray;
    padding: 0 16px;
    line-height: 22px;
}

.group-list-item {
    border-bottom: 1px solid #eee;
    position: relative;
}

.group-list-item .top_triangle-icon {
    font-size: 12px;
    color: #9f8d4f;
    height: 0;
    width: 0;
    border: 15px solid transparent;
    border-left-color: #ffe700;
    border-top-color: #ffe700;
    position: absolute;
    top: 0px;
    left: 0px;
}

.group-list-item .top_triangle-icon text {
    position: absolute;
    top: -16px;
    left: -13px;
}

.group-list-item__mainBar {
    display: flex;
    height: 60px;
    line-height: 60px;
    font-size: 16px;
    padding: 0 20px;
}

.group-list-item__mainBar__hd {
    position: relative;
}

.group-list-item__mainBar__hd image {
    width: 40px;
    height: 40px;
    border-radius: 50%;
    margin: 10px 12px 10px 0;
}

.weixinGrpIcon {
    position: absolute;
    top: 8px;
    right: 8px;
    color: #09bb07;
}

.group-list-item__mainBar__bd {
    flex: 1;
    padding: 10px 0;
}

.group-list-item__mainBar__bd .commonGrpCell,.group-list-item__mainBar__bd .shareBindGrpCell {
    overflow: hidden;
    height: 26px;
    line-height: 26px;
}

.group-list-item__mainBar__bd .groupTag {
    height: 12px;
    line-height: 12px;
    font-size: 10px;
    float: left;
    border-radius: 2px;
    color: gray;
    font-family: 'microsoft yahei';
}

.group-list-item__mainBar__bd .shareBindGrpCell {
    position: relative;
}

.group-list-item__mainBar__bd open-data,.group-list-item__mainBar__bd .backUpWord {
    display: block;
    background: white;
    position: absolute;
    width: 100%;
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
}

.group-list-item__mainBar__bd open-data {
}

.weui-cell_active .group-list-item__submitHomeworkBtn {
    text-shadow: none;
}

.btn_active.group-list-item__submitHomeworkBtn {
    box-shadow: none;
}

.group-list-item__submitHomeworkBtn {
    width: 5em;
    text-align: center;
    border-radius: 30px;
    background: #ffe700;
    line-height: 30px;
    margin: auto;
    font-size: 14px;
    box-shadow: 0 4px 10px 0 rgba(160,160,160,0.60);
    margin-left: 4px;
}

.group-list-item__mainBar__ft {
    width: 40px;
    text-align: center;
    height: 20px;
    border-radius: 10px;
    background: #ffe700;
    line-height: 20px;
    color: #9f8d4f;
    margin: auto;
    font-size: 12px;
}

.group-list-item__mainBar__ft.red-round {
    width: 10px;
    height: 10px;
    border-radius: 50%;
}

.group-list-item__imgBar {
    display: flex;
    justify-content: space-between;
    padding: 0 20px 20px;
}

.list-item-imgWrapper {
    height: 60px;
    width: 60px;
}

.grp-3-photo {
    position: relative;
}

.grp-3-photo .video-icon {
    position: absolute;
    top: 50%;
    width: 30px;
    height: 30px;
    background: transparent;
    left: 50%;
    transform: translateX(-50%) translateY(-50%);
}

.grp-3-photo .thumbnail-tag {
    position: absolute;
    right: 0;
    bottom: 0;
    width: 40px;
    line-height: 20px;
    background: rgba(0,0,0,.4);
    font-size: 12px;
    color: white;
    border-radius: 10px 0 0 0;
    text-align: center;
    font-weight: bolder;
}

.group-list-item__imgBar image {
    width: 100%;
    height: 100%;
}

.tplMsgFormBtn {
    height: 100%;
    overflow-y: scroll;
}

.sub-btn {
    font-size: 15px;
    text-align: center;
    padding: 0 15px;
    background: #fff;
    border-radius: 17px;
    height: 34px;
    line-height: 34px;
    border: 1px solid #eee;
    width: 6em;
}

.saveOriginWxAvatarBtn {
}

.little-tip {
    font-size: 14px;
    margin-bottom: 10px;
}

.little-tip-danger {
    color: red;
}

.sub-content__btn {
    font-size: 12px;
    text-align: center;
    background: #fff;
    border-radius: 30px;
    border: 1px solid #eee;
    width: 14em;
    box-shadow: none;
    font-weight: normal;
    margin: 0 auto 10px;
}