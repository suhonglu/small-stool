input {
}

.nav-bar {
    position: initial;
    border: none;
}

.form-box {
    overflow: hidden;
    padding: 0 20px;
}

.input-label {
    font-family: 'PingFangSC-Semibold';
    font-weight: bolder;
    font-size: 20px;
    color: #333333;
    letter-spacing: 0;
    line-height: 20px;
    text-align: left;
    padding: 0;
    margin: 15px 0 10px 0;
}

.input-box {
    line-height: 24px;
    height: 50px;
    background: #f8f8f8;
    border-radius: 6px;
    padding: 0 15px;
}

.inp-container {
    margin-bottom: 30px;
    position: relative;
}

.submitBtn-container {
    overflow: hidden;
}

.input-desc-box {
    height: 100px;
    padding: 5px 10px;
    padding-right: 30px;
}

.textarea-placeholder,.input-placeholder {
    font-size: 14px;
    color: #aaaaaa;
}

.submit-btn {
    width: 220px;
    line-height: 50px;
    font-family: 'PingFangSC-Semibold';
    font-weight: bolder;
    font-size: 17px;
    color: #333333;
    text-align: center;
    background: #ffe700;
    border-radius: 50px;
    margin-top: 15px;
}

.use-wxName-btn {
    font-family: PingFangSC-Regular;
    font-size: 14px;
    color: #333333;
    letter-spacing: 0;
    background: #ffe700;
    border-radius: 100px;
    width: 116px;
    line-height: 24px;
    text-align: center;
    position: absolute;
    right: 0;
    top: -2px;
}

.opt-btn {
    font-size: 14px;
}

.exchange-btn {
    position: absolute;
    top: 0;
    right: 0;
}

.clear-btn {
    position: absolute;
    bottom: 6px;
    right: 6px;
    background: lightgray;
    border-radius: 50px;
    line-height: 20px;
    width: 20px;
    text-align: center;
    color: white;
}

.clear-icon {
    width: 20px;
    height: 20px;
    background: transparent;
}