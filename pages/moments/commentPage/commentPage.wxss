.empty-tip {
    color: gray;
    font-size: 16px;
    text-align: center;
    background: #f2f2f2;
    line-height: 20px;
    padding-top: 45px;
    height: 100%;
    box-sizing: border-box;
}

.empty-tip .empty-pic {
    width: 50%;
    height: 120px;
    margin: 70px auto 0;
}

.empty-tip .empty-txt {
    color: #666;
}

.empty-tip .empty-pic image {
    width: 100%;
    height: 100%;
    background: transparent;
}

.commentList {
    width: 100%;
    background: white;
}

.commentItem {
    position: relative;
    padding: 15px 15px 11px 0;
    margin-left: 15px;
    font-size: 15px;
    display: flex;
    line-height: 1;
    border-top: 1px solid #f7f7f7;
}

.commentItem .top_triangle-icon {
    right: 0;
    border-width: 12px;
    top: 0px;
    font-size: 10px;
    line-height: 22px;
    left: initial;
    border-left-color: transparent;
    border-right-color: #ffe700;
}

.commentItem .top_triangle-icon text {
    left: 0px;
}

.comment-user-avatar {
    display: block;
    width: 30px;
    height: 30px;
    border-radius: 50%;
}

.commentItem-info {
    flex: 1;
    display: flex;
    flex-direction: column;
    justify-content: flex-start;
    padding-left: 10px;
}

.comment-user-name {
    color: #a1a1a1;
    padding-bottom: 6px;
    line-height: 1.1;
}

.comment-content-text {
    text-align: justify;
    word-break: break-all;
    line-height: 1.5;
    font-size: 16px;
}

.comment-post-date {
    text-align: left;
    color: #a1a1a1;
    font-size: 12px;
    padding-bottom: 11px;
}

.delBtn {
    color: #74769a;
    font-size: 12px;
    line-height: 14px;
    height: 14px;
}

.replyBoxContainer {
    background: rgba(0,0,0,.5);
    position: fixed;
    top: 0;
    bottom: 0;
    left: 0;
    right: 0;
    z-index: 1000;
}

.post-form {
    width: 100%;
    height: 100%;
    background: rgba(0,0,0,.4);
    position: fixed;
    top: 0;
    z-index: 10000;
}

.post-box {
    position: fixed;
    bottom: 0;
    height: 50px;
    display: flex;
    width: 100%;
    background: white;
    padding: 0 20px;
    z-index: 500;
    box-sizing: border-box;
    border-top: 1px solid #eeeeee;
}

.post-input-box {
    flex: 1;
    display: flex;
    margin: auto;
}

.post-btn-box {
    font-family: 'PingFangSC-Semibold';
    font-weight: bolder;
    font-size: 15px;
    color: #333333;
    padding: 0 15px;
    background: #ffe700;
    border-radius: 50px;
    height: 34px;
    line-height: 34px;
    margin: auto;
}

.input-box {
    flex: 1;
    margin-right: 20px;
    height: 50px;
    border-radius: 4px;
    line-height: 50px;
}