.pageWrapper {
    display: flex;
    flex-direction: column;
    height: 100%;
    background: #000;
}

.quitBtn {
    color: white;
    font-size: 16px;
    line-height: 18px;
    padding: 5px 13px;
    display: inline-block;
    text-shadow: 0px 1px 2px rgba(0,0,0,0.5);
    height: 18px;
    background: rgba(0,0,0,.3);
    border-radius: 12px;
    margin: 10px 15px;
}

video {
    width: 100%;
    height: 100%;
    top: 0;
    bottom: 0;
    left: 0;
    right: 0;
    z-index: 3000;
    flex: 1;
}

.bottomBar {
    position: initial;
}