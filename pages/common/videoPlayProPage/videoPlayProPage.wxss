.pageWrapper {
    display: flex;
    flex-direction: column;
    height: 100%;
    background: #000;
}

.pageWrapper__mask {
    height: 80%;
    width: 100%;
}

.fadeFavorHeart {
    width: 200rpx;
    height: 200rpx;
    top: 50%;
    left: 50%;
    position: absolute;
    margin-left: -100rpx;
    margin-top: -100rpx;
    animation: fade-out-pro;
    animation-duration: 1.5s;
    animation-fill-mode: both;
}

.quitBtn {
    color: white;
    font-size: 16px;
    line-height: 18px;
    padding: 5px 13px;
    display: inline-block;
    text-shadow: 0px 1px 2px rgba(0,0,0,0.5);
    height: 18px;
    background: rgba(0,0,0,.3);
    border-radius: 12px;
    margin: 10px 15px;
    position: absolute;
    top: 0;
    left: 0;
}

video {
    width: 100%;
    height: 100%;
    flex: 1;
}

.bottomBar {
    position: initial;
}

.operate-buttons {
    position: absolute;
    bottom: 100rpx;
    right: 30rpx;
}

.operate-buttons__item {
    text-align: center;
    margin-bottom: 30rpx;
}

.operate-buttons__item__img {
    width: 80rpx;
    height: 80rpx;
    padding: 10rpx;
}

.operate-buttons__item__text {
    font-size: 24rpx;
    color: rgba(255,255,255,1);
    line-height: 33rpx;
}

.pound-heart {
    animation: pound .25s 4 alternate;
}

.bottom-bar {
    display: flex;
    align-items: center;
    font-size: 34rpx;
    line-height: 100rpx;
}

.bottom-bar__btn {
    flex: 1;
    text-align: center;
}

.bottom-bar__btn span {
    font-size: 34rpx;
    color: white;
}

button.bottom-bar__btn {
    line-height: 100rpx;
    margin: 0;
    padding: 0;
    background: transparent;
}

.bottom-bar__home {
    width: 150rpx;
    line-height: 150rpx;
    font-size: 80rpx;
    text-align: center;
}

.bottom-bar__share {
    padding: 0 90rpx;
    background: orange;
    color: white;
    font-size: 40rpx;
    border-radius: 50rpx;
    display: flex;
    align-items: center;
}

.bottom-bar__img {
    width: 58rpx;
    height: 58rpx;
    background: transparent;
    vertical-align: middle;
    margin-right: 20rpx;
}

.bottom-bar__img-recommend {
    position: relative;
    top: -5rpx;
}

.bottom-bar__img-favor {
    position: relative;
    top: -3rpx;
}

.bottom-bar__img-share {
}

.bottom-bar__favor {
    height: 100rpx;
    padding: 0 50rpx;
    margin: 0 40rpx;
    background: #ffe700;
    color: white;
    border-radius: 50rpx;
    display: flex;
    align-items: center;
}

.share-anim {
    animation: share 4s infinite ease;
}

@-webkit-keyframes share {
    0% {
        width: 58rpx;
        height: 58rpx;
    }

    6% {
        width: 0;
        height: 0;
    }

    12% {
        width: 58rpx;
        height: 58rpx;
    }

    100% {
        width: 58rpx;
        height: 58rpx;
    }
}

@keyframes share {
    0% {
        width: 58rpx;
        height: 58rpx;
    }

    6% {
        width: 0;
        height: 0;
    }

    12% {
        width: 58rpx;
        height: 58rpx;
    }

    100% {
        width: 58rpx;
        height: 58rpx;
    }
}