.album-list-item-container {
    position: relative;
    padding: 18px 15px 0;
}

.album-list-item {
    display: flex;
    position: relative;
    background-color: #fff;
    border-radius: 4px;
    box-shadow: 0 4px 13px 1px rgba(51,51,51,.1);
    padding: 10px;
}

.album-list-item.active {
    background-color: rgba(255,231,0,.5);
}

.album-list-item__radio {
    border: 10px solid transparent;
    border-right: 10px solid yellowgreen;
    border-bottom: 10px solid yellowgreen;
    width: 0;
    height: 0;
    position: absolute;
    bottom: 0;
    right: 15px;
}

.album-list-item__poster {
    position: relative;
    width: 90px;
    height: 90px;
    border-radius: 4px;
}

.album-list-item__poster image {
    width: 100%;
    height: 100%;
    border-radius: 4px;
}

.album-list-item__poster .play-icon {
    width: 50%;
    height: 50%;
}

.album-list-item__info {
    flex: 1;
    padding-left: 15px;
    display: flex;
    flex-direction: column;
    justify-content: space-around;
}

.album-list-item__info-title {
    display: -webkit-box;
    -webkit-line-clamp: 2;
    overflow: hidden;
    text-overflow: ellipsis;
    -webkit-box-orient: vertical;
    font-size: 16px;
    color: #333;
    word-break: break-all;
    line-height: 1.6;
}

.album-list-item__info-time {
    font-size: 12px;
    color: #666;
    height: 16px;
    line-height: 16px;
}