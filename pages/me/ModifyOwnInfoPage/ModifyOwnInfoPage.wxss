.nav-bar {
    position: initial;
    border: none;
}

.nav-bar-right-text {
    padding: 0 27px;
}

.form-box {
    overflow: hidden;
    padding: 0 20px;
}

.input-label {
    font-family: 'PingFangSC-Semibold';
    font-weight: bolder;
    font-size: 20px;
    color: #333333;
    letter-spacing: 0;
    line-height: 20px;
    text-align: left;
    padding: 0;
    margin: 15px 0 10px 0;
}

.input-box {
    line-height: 50px;
    height: 50px;
    background: #f8f8f8;
    border-radius: 6px;
    padding: 0 15px;
}

.inp-container {
    margin-bottom: 15px;
    overflow: hidden;
}

.submitBtn-container {
    overflow: hidden;
}

.input-desc-box {
    height: 100px;
    padding: 5px 10px;
    line-height: 20px;
}

.textarea-placeholder,.input-placeholder {
    font-size: 14px;
    color: #aaaaaa;
}

.submit-btn {
    width: 190px;
    height: 60px;
    line-height: 60px;
    font-family: 'PingFangSC-Semibold';
    font-weight: bolder;
    font-size: 17px;
    color: #333333;
    text-align: center;
    background: #ffe700;
    border-radius: 50px;
    margin-top: 15px;
}