button {
    margin: 0;
    padding: 0;
    font-size: initial;
    line-height: initial;
    border-radius: 0;
    color: initial;
    background-color: initial;
    box-sizing: border-box;
}

.type-list {
    display: flex;
    flex-direction: column;
    position: fixed;
    top: 10px;
    bottom: 0;
    left: 0;
    right: 0;
}

.type-item {
    flex: 1;
    background-color: #fff;
    color: white;
    border-radius: 4px;
    box-shadow: 0 4px 13px 1px rgba(51,51,51,.9);
    margin: 10px;
    margin-top: 0;
    position: relative;
}

.type-item-hovor {
    box-shadow: none;
}

.blur-mask {
    position: absolute;
    top: 0;
    bottom: 0;
    left: 0;
    right: 0;
    filter: blur(1px);
    width: 100%;
    height: 100%;
}

.type-item__contentWrapper {
    position: absolute;
    top: 0;
    bottom: 0;
    left: 0;
    right: 0;
    display: flex;
    align-items: center;
    justify-content: center;
    text-shadow: 1px 1px 2px rgba(0,0,0,.8);
}

.type-item__title {
    font-size: 24px;
}

.type-item__desc {
    font-size: 14px;
}