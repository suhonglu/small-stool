.nav-bar,.weui-navbar {
    background: white;
    z-index: 5000;
}

.weui-tab__panel {
    position: fixed;
    top: 0;
    bottom: 0;
    width: 100%;
    padding-top: 100px;
}

.weui-tab__content {
    height: 100%;
    position: relative;
}

.buildGrpTip {
    text-align: center;
    font-size: 12px;
    color: #333;
    line-height: 40px;
    top: 100px;
    width: 100%;
    z-index: 1000;
    height: 30px;
}

.buildGrpTip strong {
    color: #0093ff;
    font-weight: normal;
}

.nav-bar {
    z-index: 5001;
}

.nav-bar-mid {
    color: #333;
}

.weui-navbar {
    position: fixed;
    top: 50px;
}

.post-panel {
    position: absolute;
    top: 64px;
    bottom: 0;
    width: 100%;
    background: white;
    box-sizing: border-box;
    padding: 0 20px;
}

.post-panel button {
    height: 100%;
}

.text-input {
    background: #f8f8f8;
    border-radius: 6px;
    height: 100px;
    padding: 5px 10px;
    margin-bottom: 15px;
    font-size: 14px;
    line-height: 24px;
    width: auto;
}

.textarea-placeholder,.input-placeholder {
    font-size: 14px;
    color: #aaaaaa;
}

.commonGrpName,.wxGrpName {
    position: absolute;
    top: 0;
    left: 0;
    background: white;
    width: 100%;
}

.upload-btn {
    float: left;
    margin: 0 4px 4px 0;
    background: #ffe700;
    display: flex;
    align-items: center;
    justify-content: center;
}

.upload-btn image.add-icon {
    width: 50px;
    height: 50px;
    border-radius: 50%;
}

.upload-btn::before,.upload-btn::after {
    content: " ";
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%,-50%);
    background-color: #D9D9D9;
}

.pic-uploader {
    overflow: hidden;
}

.upload-list {
    overflow: hidden;
    margin-right: -4px;
}

.upload-list .image-wrapper {
    float: left;
    margin: 0 4px 4px 0;
    width: 90px;
    height: 90px;
    position: relative;
    overflow: hidden;
}

.upload-list image {
    width: 100%;
    height: 100%;
}

.tapArea {
    width: 50%;
    height: 50%;
    position: absolute;
    top: 0;
    right: 0;
}

.tapArea .delIcon {
    position: absolute;
    top: 0px;
    right: 0px;
    width: 20px;
    height: 20px;
    border-radius: 0 0 0 8px;
    background-color: transparent;
}

.upload-tip {
    font-size: 14px;
    line-height: 50px;
    color: #aaaaaa;
    text-align: center;
}

.chooseGrpBtn {
    padding: 0 10px;
    width: 100%;
    box-sizing: border-box;
    background: white;
}

.groupPickerCard {
    z-index: 2000;
    bottom: 0;
    width: 100%;
    background: white;
    overflow: auto;
    transition: 1s;
}

.close-icon {
    position: fixed;
    top: 15px;
    left: 20px;
    width: 34px;
    height: 34px;
    text-align: center;
    line-height: 30px;
    font-size: 20px;
    z-index: 2001;
    border-radius: 50%;
    background: #ffe700;
}

.card-tip {
    position: fixed;
    width: 100%;
    box-sizing: border-box;
    background: rgba(255,255,255,.9);
    border-bottom: 1px solid #eee;
    font-size: 20px;
    line-height: 64px;
    padding: 0 20px;
    height: 64px;
    text-align: center;
    font-family: PingFangSC-Semibold;
    font-weight: bolder;
    color: #333333;
}

.group-list {
    width: 100%;
    padding-bottom: 125px;
}

.group-list-item {
    display: flex;
    height: 60px;
    line-height: 60px;
    font-size: 16px;
    border-bottom: 1px solid #eee;
    padding: 0 20px;
}

.group-list-item__hd image {
    width: 40px;
    height: 40px;
    border-radius: 50%;
    margin: 10px 12px 10px 0;
}

.group-list-item__bd {
    flex: 1;
    text-overflow: ellipsis;
    overflow: hidden;
    white-space: nowrap;
    position: relative;
}

.group-list-item__ft {
    width: 40px;
    text-align: center;
    height: 20px;
    border-radius: 10px;
    background: #ffe700;
    line-height: 20px;
    color: #666;
    margin: auto;
    font-size: 12px;
}

image.checkbox {
    width: 24px;
    height: 24px;
    border-radius: 50%;
    background: #fff;
    margin: 18px 0 18px 12px;
}